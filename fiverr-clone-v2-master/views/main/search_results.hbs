<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 overview">
            <form method="post" action="/search">
                <div class="input-group input-group-lg">
                    <input type="text" class="form-control" name="search_input" placeholder="What are you searching?..">
                    <span class="input-group-btn">
                        <input type="submit" class="btn btn-success" value="Find gigs">
                    </span>
                </div>
            </form>
        </div>
    </div>
        <div class=" section">
            <h1>Search Results</h1>
            {{#each content.hits}}
            <div class="col-md-3">
                <div class="gig-card">
                    <a href="/service_detail/{{ objectID }}">
                        <img src="{{picture}}" />
                        <h4>{{title}}</h4>
                        <h3>${{price}}</h3>
                    </a>
                </div>
            </div>
            {{/each}}
        </div>
    
</div>